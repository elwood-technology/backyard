{
  "name": "@backyard/root",
  "private": true,
  "version": "0.0.1",
  "main": "index.js",
  "repository": "git@github.com:backyard-hq/backyard.git",
  "author": "Travis Kuhl <travis.kuhl@gmail.com>",
  "license": "MIT",
  "scripts": {
    "bootstrap": "yarn clean:all && yarn && yarn compile",
    "lint": "eslint -c ./.eslintrc.js",
    "clean:all": "git clean -dfqX -- ./node_modules **/node_modules/ **/lib/ **/dist/ **/tsconfig.tsbuildinfo **/*.zip **/*.log **/.DS_Store",
    "clean:ts": "git clean -dfqX -- **/{lib,dist}/ **/tsconfig.tsbuildinfo",
    "compile": "tsc -b ./packages/tsconfig.json",
    "watch": "yarn compile --watch",
    "test": "wsrun -m test --passWithNoTests",
    "postinstall": "husky install",
    "local-cli": "ts-node ./packages/cli/src/cli.ts",
    "lerna": "lerna"
  },
  "resolutions": {
    "typescript": "^4.2.3"
  },
  "workspaces": {
    "packages": [
      "packages/**/*",
      "packages/*"
    ],
    "nohoist": [
      "**/electron",
      "**/electron/**"
    ]
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix -c ./.eslintrc.js"
    ]
  },
  "dependencies": {
    "@backyard/tools-generate": "*",
    "@types/jest": "^26.0.15",
    "@types/node": "^12.7.11",
    "@typescript-eslint/eslint-plugin": "^4.15.0",
    "@typescript-eslint/parser": "^4.15.0",
    "eslint": "^7.19.0",
    "eslint-config-prettier": "^8.0.0",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.19.0",
    "husky": "^6.0.0",
    "lerna": "^4.0.0",
    "lint-staged": "^11.0.0",
    "prettier": "^2.0.2",
    "typescript": "^4.2.3",
    "wsrun": "^5.2.4"
  }
}
